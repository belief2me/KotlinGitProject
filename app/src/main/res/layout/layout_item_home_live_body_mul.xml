<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginTop="@dimen/dp5"
    android:clickable="true"
    android:id="@+id/card_view"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/dp4"
    app:cardElevation="@dimen/dp2"
    android:layout_height="wrap_content">
    
    <android.support.constraint.ConstraintLayout
        android:paddingBottom="@dimen/dp4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/iv_video_preview"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:layout_height="@dimen/dp120"/>

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_marginTop="@dimen/dp4"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp2"
            android:maxLines="2"
            android:minLines="2"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:text="xxxx"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/word_size_14"
            app:layout_constraintTop_toBottomOf="@id/iv_video_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_video_live_up"
            android:gravity="center"
            android:paddingLeft="@dimen/dp4"
            android:paddingTop="@dimen/dp4"
            android:text="xxxx"
            android:textColor="@color/black_alpha_45"
            android:textSize="@dimen/word_size_12"
            app:layout_constraintTop_toBottomOf="@id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_video_online"
            android:layout_marginTop="@dimen/dp4"
            android:drawablePadding="@dimen/dp3"
            android:drawableStart="@drawable/ic_watching"
            android:gravity="center"
            android:paddingRight="@dimen/dp4"
            android:text="xxxx"
            android:textColor="@color/black_alpha_45"
            android:textSize="@dimen/word_size_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>